<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.sd.traczclicker">

    <application

        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name="com.sd.traczclicker.MainActivity"
            android:screenOrientation="portrait">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>

        </activity>

        <activity android:name="com.sd.traczclicker.ShopClick"
            android:theme="@style/AppTheme.CustomTheme"
            android:screenOrientation="portrait">
        </activity>

        <activity android:name="com.sd.traczclicker.ShopSecond"
            android:theme="@style/AppTheme.CustomTheme"
            android:screenOrientation="portrait">
        </activity>

        <activity android:name="com.sd.traczclicker.ShopDecorations"
            android:theme="@style/AppTheme.CustomTheme"
            android:screenOrientation="portrait">
        </activity>

        <activity android:name="com.sd.traczclicker.Config"
            android:theme="@style/AppTheme.CustomTheme"
            android:screenOrientation="portrait">
        </activity>

        <activity android:name="com.sd.traczclicker.Statistics"
            android:theme="@style/AppTheme.CustomTheme"
            android:screenOrientation="portrait">
        </activity>

        <activity android:name="com.sd.traczclicker.Reset"
            android:theme="@style/AppTheme.CustomTheme"
            android:screenOrientation="portrait">
        </activity>

    </application>

</manifest>