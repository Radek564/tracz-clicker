<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/layout_bg">

    <TextView
        android:id="@+id/totalDots"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="11dp"
        android:layout_marginStart="11dp"
        android:layout_marginTop="22dp"
        android:shadowColor="#000000"
        android:shadowDx="1.5"
        android:shadowDy="1.3"
        android:shadowRadius="1.6"
        android:text="Łącznie dolarów:"
        android:textColor="#ffffff"
        android:textSize="15sp" />

    <TextView
        android:id="@+id/totalDpc"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/totalDots"
        android:layout_alignStart="@+id/totalDots"
        android:layout_below="@+id/totalDots"
        android:layout_marginTop="18dp"
        android:shadowColor="#000000"
        android:shadowDx="1.5"
        android:shadowDy="1.3"
        android:shadowRadius="1.6"
        android:text="Łącznie dolarów z obstawy:"
        android:textColor="#ffffff"
        android:textSize="15sp" />

    <TextView
        android:id="@+id/totalDps"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/totalDots"
        android:layout_alignStart="@+id/totalDots"
        android:layout_below="@+id/totalDpc"
        android:layout_marginTop="18dp"
        android:shadowColor="#000000"
        android:shadowDx="1.5"
        android:shadowDy="1.3"
        android:shadowRadius="1.6"
        android:text="Łącznie dolarów z włości:"
        android:textColor="#ffffff"
        android:textSize="15sp" />

    <TextView
        android:id="@+id/totalBonus"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/totalDps"
        android:layout_alignStart="@+id/totalDps"
        android:layout_below="@+id/totalDps"
        android:layout_marginTop="21dp"
        android:shadowColor="#000000"
        android:shadowDx="1.5"
        android:shadowDy="1.3"
        android:shadowRadius="1.6"
        android:text="Premia z ojcowizny:"
        android:textColor="#ffffff"
        android:textSize="25sp"
        android:visibility="invisible" />

    <TextView
        android:id="@+id/totalReset"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/totalBonus"
        android:layout_alignStart="@+id/totalBonus"
        android:layout_below="@+id/totalBonus"
        android:layout_marginTop="13dp"
        android:shadowColor="#000000"
        android:shadowDx="1.5"
        android:shadowDy="1.3"
        android:shadowRadius="1.6"
        android:text="Premia z resetu:"
        android:textColor="#ffffff"
        android:textSize="25sp"
        android:visibility="invisible" />

    <Button
        android:id="@+id/resetBtn"
        android:layout_width="180dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/totalReset"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="14dp"
        android:background="@drawable/buttonshape"
        android:shadowColor="#000000"
        android:shadowDx="1.5"
        android:shadowDy="1.3"
        android:shadowRadius="1.6"
        android:text="Reset"
        android:textColor="#ffffff"
        android:textSize="20sp"
        android:visibility="invisible" />
</RelativeLayout>