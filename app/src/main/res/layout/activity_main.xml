<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.sd.traczclicker.MainActivity"
    tools:ignore="contentDescription"
    android:orientation="vertical" >

	<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
		android:layout_width="fill_parent"
		android:layout_height="fill_parent"
		android:orientation="vertical" >

        <ImageView
            android:id="@+id/mainbackground"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleType="centerCrop"
            android:src="@drawable/dolary" />

	</FrameLayout>

    <ImageView
        android:id="@+id/panwalencik"
        android:layout_width="300dp"
        android:layout_height="125dp"
        android:layout_alignTop="@+id/dotBtn"
        android:layout_toEndOf="@+id/shopBtn"
        android:layout_toRightOf="@+id/shopBtn"
        android:rotation="25"
        android:src="@drawable/panwalencik"
        android:visibility="invisible" />

    <ImageView
        android:id="@+id/tesc"
        android:layout_width="350dp"
        android:layout_height="175dp"
        android:layout_centerVertical="true"
        android:layout_marginEnd="47dp"
        android:layout_marginRight="47dp"
        android:layout_marginTop="50dp"
        android:layout_toLeftOf="@+id/shopBtn3"
        android:layout_toStartOf="@+id/shopBtn3"
        android:rotation="-30"
        android:src="@drawable/tesc"
        android:visibility="invisible" />

    <ImageButton
        android:id="@+id/dotBtn"
        android:layout_width="600dp"
        android:layout_height="230dp"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:background="@null"
        android:scaleType="fitCenter"
        android:src="@drawable/tracz" />

    <ImageView
        android:id="@+id/czapka"
        android:layout_width="300dp"
        android:layout_height="125dp"
        android:layout_alignBottom="@+id/panwalencik"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_marginBottom="30dp"
        android:layout_marginEnd="77dp"
        android:layout_marginRight="77dp"
        android:src="@drawable/czapka"
        android:visibility="invisible" />

	<ImageView
		android:id="@+id/wikary"
		android:layout_width="350dp"
		android:layout_height="175dp"
		android:layout_alignLeft="@+id/panwalencik"
		android:layout_alignParentTop="true"
		android:layout_alignStart="@+id/panwalencik"
		android:layout_marginLeft="62dp"
		android:layout_marginStart="62dp"
		android:src="@drawable/wikary"
		android:visibility="invisible" />

	<TextView
		android:id="@+id/dotsView"
		android:layout_width="fill_parent"
		android:layout_height="wrap_content"
		android:layout_centerHorizontal="true"
		android:layout_alignParentTop="true"
		android:gravity="center"
		android:maxLines="1"
		android:text="0$"
		android:textColor="#ffffff"
		android:textSize="25sp"
		android:shadowColor="#000000"
		android:shadowDx="1.5"
		android:shadowDy="1.3"
		android:shadowRadius="1.6" />


	<TextView
		android:id="@+id/dpsAndDpcView"
		android:layout_width="fill_parent"
		android:layout_height="wrap_content"
		android:layout_centerHorizontal="true"
		android:layout_below="@+id/dotsView"
		android:gravity="center"
		android:maxLines="2"
		android:text="0$/sek\n1$/klik"
		android:textColor="#ffffff"
		android:textSize="25sp"
		android:shadowColor="#000000"
		android:shadowDx="1.5"
		android:shadowDy="1.3"
		android:shadowRadius="1.6"/>

    <Button
        android:id="@+id/shopBtn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_above="@id/adView"
        android:layout_toLeftOf="@+id/shopBtn2"
        android:layout_toStartOf="@+id/shopBtn2"
        android:gravity="center"
        android:maxLines="1"
        android:shadowColor="#000000"
        android:shadowDx="1.5"
        android:shadowDy="1.3"
        android:shadowRadius="1.6"
        android:text="Obstawa"
        android:textColor="#ffffff"
        android:textSize="20sp"
        android:background="@drawable/buttonshape" />

    <Button
        android:id="@+id/shopBtn2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_above="@id/adView"
        android:layout_centerHorizontal="true"
        android:gravity="center"
        android:maxLines="1"
        android:shadowColor="#000000"
        android:shadowDx="1.5"
        android:shadowDy="1.3"
        android:shadowRadius="1.6"
        android:text="Włości"
        android:textColor="#ffffff"
        android:textSize="20sp"
        android:background="@drawable/buttonshape" />

    <Button
        android:id="@+id/shopBtn3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_above="@id/adView"
        android:layout_toEndOf="@+id/shopBtn2"
        android:layout_toRightOf="@+id/shopBtn2"
        android:gravity="center"
        android:maxLines="1"
        android:shadowColor="#000000"
        android:shadowDx="1.5"
        android:shadowDy="1.3"
        android:shadowRadius="1.6"
        android:text="Ozdoby"
        android:textColor="#ffffff"
        android:textSize="20sp"
        android:background="@drawable/buttonshape" />

    <ImageButton
        android:id="@+id/configBtn"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:background="@drawable/configshape"
        android:scaleType="fitCenter"
        android:src="@drawable/config" />

	<ImageButton
		android:id="@+id/statsBtn"
		android:layout_width="50dp"
		android:layout_height="50dp"
		android:layout_alignParentRight="true"
		android:layout_alignParentEnd="true"
		android:background="@drawable/configshape"
		android:scaleType="fitCenter"
		android:src="@drawable/stats" />

    <TextView
        android:id="@+id/quoteText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:shadowColor="#000000"
        android:shadowDx="1.5"
        android:shadowDy="1.3"
        android:shadowRadius="1.6"
        android:text="Nie odmawia się, kiedy pieniądz woła."
        android:textColor="#ff0000"
        android:textSize="30sp" />

	<com.google.android.gms.ads.AdView
		xmlns:ads="http://schemas.android.com/apk/res-auto"
		android:id="@+id/adView"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:layout_centerHorizontal="true"
		android:layout_alignParentBottom="true"
		ads:adSize="BANNER"
		ads:adUnitId="ca-app-pub-1707292710475822/4097160365">
	</com.google.android.gms.ads.AdView>

</RelativeLayout>
